[www]
user = www-data
group = www-data

listen = /run/php/php7.1-fpm.sock

listen.owner = www-data
listen.group = www-data

pm = dynamic
pm.max_children = 20
pm.start_servers = 4
pm.min_spare_servers = 3
pm.max_spare_servers = 6
pm.max_requests = 500

pm.status_path = /fpm/status
ping.path = /fpm/ping
